{% extends '::base.html.twig' %}

{% block body -%}
    <h1>News</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ entity.titre }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Auteur</th>
            <td>{{ entity.auteur }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description |raw}}</td>
        </tr>

        </tbody>
    </table>

    <img src="{{ asset('upload/news/'~entity.id~'.'~entity.path) }}" alt="" height="525" width="666"/>

    <ul class="record_actions">
        <li>
            <a href="{{ path('news') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('news_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

{% endblock %}
