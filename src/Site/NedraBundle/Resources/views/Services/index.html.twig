{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Services list</h1>

    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <thead>
            <tr>

                <th>Titre</th>
                <th>Adresse</th>
                <th>Description</th>
                <th>Date</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.type }}</td>

                <td>
                    <a class="btn btn-success" href="{{ path('services_show', { 'id': entity.id }) }}">
                        <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                        View
                    </a>
                    <a class="btn btn-info" href="{{ path('services_edit', { 'id': entity.id }) }}">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Edit
                    </a>
                    <a class="btn btn-danger" href="{{ path('services_delete', { 'id': entity.id }) }}">
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('services_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>


    {% endblock %}
